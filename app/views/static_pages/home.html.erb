<% provide :title, t(".title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form", micropost: @micropost %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".micropost_header" %></h3>
      <%= render "shared/feed", feed_items: @feed_items %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t ".head" %></h1>
  <h2>
    <%= t ".text1" %>
    <%= link_to t(".text2"), "http://www.railstutorial.org/" %>
    <%= t ".text3" %>
  </h2>
  <%= link_to t(".signup"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag("rails.png", alt: t(".image_alt")),
  "http://rubyonrails.org/" %>
<% end %>
