<% provide :title, t(".title") %>
<% provide :button_text, t(".button_text") %>
<h1><%= t ".head" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", :user=> @user %>
    <div class="gravatar-edit">
      <%= gravatar_for @user %>
      <%= link_to t(".change_avatar"), "http://gravatar.com/emails", "target": "_blank" %>
    </div>
  </div>
</div>
